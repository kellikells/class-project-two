<div class="container mainContainer">
    <label class="row">
        <form class="col s12">
            <label class="row">
                <label class="input-field col s12">
                    <input type="hidden" id="serviceId" value="{{id}}">
                    <input id="title" type="text" class="validate" value="{{title}}">
                    <label for="title">Title</label>
                </label>
            </label>
            <div class="row">
                <div class="input-field col s12">
                    <textarea class="materialize-textarea" id="description" class="validate">{{description}}</textarea>
                    <label for="description">description</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="price" type="text" class="validate" value="{{price}}">
                    <label for="price">Price</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action" id="updateService">update
                Service</button>
        </form>
    </label>
</div>
<script src="/js/service.js"></script>